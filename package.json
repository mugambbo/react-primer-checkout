{
  "name": "react-checkout-challenge",
  "version": "0.1.15",
  "private": false,
  "description": "An unofficial react client sdk that uses the Primer API to provide merchants with the front-end tools required to collect payment information and generate a token",
  "keywords": [
    "payments",
    "checkout",
    "primer",
    "challenge",
    "token"
  ],
  "author": "Abdulmajid Isiaka",
  "license": "MIT",
  "homepage": "https://github.com/mugambbo/react-primer-checkout",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mugambbo/react-primer-checkout.git"
  },
  "types": "dist/esm/index.d.ts",
  "main": "dist/esm/index.js",
  "jsnext:main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/enzyme": "^3.10.9",
    "@types/jest": "^26.0.24",
    "@types/mixpanel-browser": "^2.35.7",
    "@types/node": "^12.20.19",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.9",
    "mixpanel-browser": "^2.41.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.3.5",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:esm": "tsc -p tsconfig.build.json && cp src/index.css dist/esm",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs && cp src/index.css dist/cjs",
    "build:all": "npm run build:esm && npm run build:cjs",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "size": "npm run build && size-limit",
    "test:coverage": "npm run test -- -u --coverage --watchAll=false",
    "deploy:demo": "cp react-checkout-example/build/index.html react-checkout-example/build/200.html && surge --project build --domain https://react-primer-checkout.surge.sh",
    "test:lint": "eslint --ext .tsx,.ts,.jsx,.js src/ --max-warnings 5",
    "test:snapshot": "npm run test -- -u --watchAll=false",
    "test:size": "size-limit",
    "prepublish": "npm run test:coverage && npm run build:all && size-limit && npm run test:lint"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@size-limit/file": "^5.0.3",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "jest-fetch-mock": "^3.0.3",
    "size-limit": "^5.0.3",
    "surge": "^0.23.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/reportWebVitals.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/index.tsx",
      "./src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "lines": 80,
        "functions": 80
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy",
      "src/(.*)$": "<rootDir>/src/$1"
    }
  },
  "size-limit": [
    {
      "path": "dist/**/*.{js,css,svg,woff,woff2,png,ttf,html,ts,tsx}",
      "limit": "200 kb"
    }
  ]
}
